#!/bin/bash

# Main direcotries 
PROJECTS=~/Projects
DOTFILES=$HOME/dotfiles
CONFIG=$DOTFILES/config
SCRIPTS=$NOTES/scripts

alias projects="cd $PROJECTS"
alias dotfiles="cd $DOTFILES"


# Config files
ZSHRC=$CONFIG/.zshrc
STARTUPRC=$CONFIG/.startuprc
GITHUBRC=$CONFIG/.githubrc
ALACRITTYRC=$CONFIG/alacritty.yml
NVIMRC=$CONFIG/.nvimrc.lua

alias zshrc="nvim $ZSHRC"
alias startuprc="nvim $STARTUPRC"
alias githubrc="nvim $GITHUBRC"
alias alacrittyrc="nvim $ALACRITTYRC"
alias nvimrc="nvim $NVIMRC"

# Symbolic links
# ln -s $HOME/.zshrc $ZSHRC
# ln -s $ALACRITTYRC $HOME/.config/alacritty/alacritty.yml
# ln -s $NVIMRC $HOME/.config/nvim/lazy-lock.json
# ln -s $NVIMRC $HOME/.config/nvim/init.lua


# Python
# Updates the python and pip aliases when using virtualenv 
alias python='eval $(which python3)'
alias pip='eval $(which pip3)'
alias activate='source ./venv/bin/activate'

# Git
chmod +x $GITHUBRC
source "$GITHUBRC"
